 #include <iostream>  
    using namespace std; 
 
    class Employee 
     {  
       public:  
           int id; //data member (also instance variable)      
           string name; //data member(also instance variable)  
           float salary;  
           Employee(int id, string name, float salary)    
            {    
                 this->id = id;    
                this->name = name;    
                this->salary = salary;   
            }    
           void display()    
            {    
                cout<<id<<"  "<<name<<"  "<<salary<<endl;    
            }    
    };  
    int main() 
   {  
        Employee e1 =Employee(101, "Mandeep", 90000); //creating an object of Employee   
        e1.display();    
        return 0;  
    }  
